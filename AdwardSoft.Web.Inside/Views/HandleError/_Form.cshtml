@model AdwardSoft.Web.Inside.Models.HandleErrorViewModel

<form class="form-validate-jquery form-content" asp-action="@ViewBag.Action" asp-controller="HandleError" callbackfn="HandleErrorSuccess()" method="post" id="form-create">
    <div class="modal-header">
        @if (ViewBag.Action == "Create")
        {<h5 class="modal-title">Thêm mới</h5> }
        else
        { <h5 class="modal-title">Điều chỉnh</h5>}
    </div>
    <div class="modal-body row">
        <input asp-for="@Model.Id" type="hidden" value="@Model.Id">
        @if (ViewBag.Action == "Create")
        {
            <div class="col-md-12">
                <label class="font-weight-bold" asp-for="LanguageCode"></label>
                <div class="pl-2 d-inline">
                    @ViewBag.LanguageName
                </div>
                <input type="hidden" class="form-control" asp-for="LanguageCode" value="@Model.LanguageCode" />
            </div>
        }
        else
        {
            <div class="col-md-12">
                <label class="clear-fix font-weight-bold" asp-for="LanguageCode"></label>
                <select class="form-control select" onchange="loadFindId(@Model.Id, this)" asp-for="LanguageCode" asp-items="@ViewBag.Languages"></select>
            </div>
        }
        <div class="col-md-12">
            <label asp-for="@Model.StatusCode" class="clear-fix font-weight-semibold"></label>
            <input asp-for="@Model.StatusCode" type="text" class="form-control">
            <span asp-validation-for="@Model.StatusCode" class="validation-invalid-label"></span>
        </div>
        <div class="col-md-12">
            <label asp-for="@Model.Title" class="clear-fix font-weight-semibold"></label>
            <input asp-for="@Model.Title" type="text" class="form-control">
            <span asp-validation-for="@Model.Title" class="validation-invalid-label"></span>
        </div>
        <div class="col-md-12">
            <label asp-for="@Model.Message" class="clear-fix font-weight-semibold"></label>
            <textarea asp-for="@Model.Message" type="text" class="form-control" rows="4"></textarea>
            <span asp-validation-for="@Model.Message" class="validation-invalid-label"></span>
        </div>
    </div>
    <div class="modal-footer">
        @if (ViewBag.Action == "Create")
        {
            <a href="#" onclick="loadFindId(0)" class="btn btn-light ml-1 btn-sm">Hủy bỏ <i class="fa fa-close mr-1"></i></a>
            <button type="submit" style="margin-right:0" class="btn btn-success ml-1 btn-sm">Thêm mới <i class="fa fa-check ml-1"></i></button>
        }
        else
        {
            <a href="#" onclick="loadFindId(0)" class="btn btn-light ml-1 btn-sm">Hủy bỏ <i class="fa fa-close mr-1"></i></a>
            <button type="submit" style="margin-right:0" class="btn btn-success ml-1 btn-sm">Cập nhật <i class="fa fa-check ml-1"></i></button>
        }
    </div>
</form>
<script>
    $(document).ready(function () {
        $('.select').select2({
            minimumResultsForSearch: Infinity
        });
        $('.form-check-input-switch').bootstrapSwitch();
        $('.select-search').select2();
    });
</script>