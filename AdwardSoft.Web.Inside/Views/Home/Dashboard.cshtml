@inject AdwardSoft.Provider.Common.IUserSession userSession
@{ ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-header header-elements-inline">
                <h6 class="card-title">Today</h6>
            </div>
            <div class="card-body py-0">
                <div class="row">
                    <div class="col-lg-3">
                        <!-- New customer -->
                        <div class="card bg-orange-400">
                            <div class="card-body">
                                <div class="d-flex">
                                    <h3 class="font-weight-semibold mb-0" id="totalNewCustomer">0</h3>
                                </div>
                                <div>
                                    New distributors
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="col-lg-3">
                        <!-- New sale receipt -->
                        <div class="card bg-success-400">
                            <div class="card-body">
                                <div class="d-flex">
                                    <h3 class="font-weight-semibold mb-0" id="totalOrder">0</h3>
                                </div>
                                <div>
                                    Total Orders
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="col-lg-3">
                        <!-- Revenue -->
                        <div class="card bg-teal-400">
                            <div class="card-body">
                                <div class="d-flex">
                                    <h3 class="font-weight-semibold mb-0" id="totalSale">0</h3>
                                </div>
                                <div>
                                    Total Sales
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <!-- Revenue -->
                        <div class="card bg-teal-400">
                            <div class="card-body">
                                <div class="d-flex">
                                    <h3 class="font-weight-semibold mb-0" id="totalSale2">0</h3>
                                </div>
                                <div>
                                    Total Sales / Month
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-4">
        <!-- TOP 5 Product -->
        <div class="card">
            <div class="card-header header-elements-inline">
                <h5 class="card-title">Top 5 Products</h5>
                <div class="header-elements">
                    <div class="list-icons">
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="chart-container">
                    <div class="chart has-fixed-height" id="pie_product"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-4">
        <!-- TOP 5 Customer -->
        <div class="card">
            <div class="card-header header-elements-inline">
                <h5 class="card-title">Top 5 Customers</h5>
                <div class="header-elements">
                    <div class="list-icons">
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="chart-container">
                    <div class="chart has-fixed-height" id="donut_customer"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-4">
        <!-- TOP 5 Categories -->
        <div class="card">
            <div class="card-header header-elements-inline">
                <h5 class="card-title">Top 5 Categories</h5>
                <div class="header-elements">
                    <div class="list-icons">
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="chart-container">
                    <div class="chart has-fixed-height" id="pie_category"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-12">
        <div class="card">
            <div class="card-header header-elements-inline">
                <h5 class="card-title">Sales Report</h5>
                <div class="header-elements">
                    <div class="list-icons">
                    </div>
                </div>
            </div>

            <div class="card-body">
                <div class="chart-container">
                    <div class="chart has-fixed-height" id="bar_topsale"></div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        var nf = Intl.NumberFormat();
        $(document).ready(function () {
            TodaySumary();
            TopProduct();
            TopCategory();
            TopCustomer();
            TotalSales();
        });

        function TodaySumary() {
            $.ajax({
                url: "@Url.Action("DashboardSumary", "Home")",
                method: "GET",
                success: function (data) {
                   // if (true) {
                    $("#totalNewCustomer").text(nf.format(data.newCustomer));
                    $("#totalOrder").text(nf.format(data.totalOrder));
                    $("#totalSale").text(nf.format(data.totalSale));
                    $("#totalSale2").text(nf.format(data.totalSaleMonth));
                    $("#totalCashier1").text(nf.format(data.totalCashier1));
                    $("#totalCashier2").text(nf.format(data.totalCashier2));
                    $("#totalDayCashier1").text(nf.format(data.totalDayCashier1));
                    $("#totalDayCashier2").text(nf.format(data.totalDayCashier2));
                    //}
                }
            });
        }

        function TopProduct() {
            $.ajax({
                url: "@Url.Action("TopProduct", "Home")",
                method: "GET",
                success: function (data) {
                    console.log(data);
                    PieProducts(data);
                }
            });
        }
        function TopCategory() {
            $.ajax({
                url: "@Url.Action("TopCategory", "Home")",
                method: "GET",
                success: function (data) {
                    PieCategories(data);
                }
            });
        }
        function TopCustomer() {
            $.ajax({
                url: "@Url.Action("TopCustomer", "Home")",
                method: "GET",
                success: function (data) {
                    DonutCustomers(data);
                }
            });
        }
        function TotalSales() {
            $.ajax({
                url: "@Url.Action("TotalSale", "Home")",
                method: "GET",
                success: function (data) {
                    WaterfallsTotalSale(data);
                }
            });
        }

        var DonutCustomers = function (data) {
            if (typeof echarts == 'undefined') {
                console.warn('Warning - echarts is not loaded.');
                return;
            }

            // Define elements
            var pie_donut_element = document.getElementById('donut_customer');

            // Charts configuration

            // Basic donut chart
            if (pie_donut_element) {

                // Initialize chart
                var pie_donut = echarts.init(pie_donut_element);
                // Chart config
                // Options
                pie_donut.setOption({
                    // Colors
                    color: [
                        '#ffb980', '#d87a80',
                        '#8d98b3', '#e5cf0d', '#97b552', '#95706d', '#dc69aa',
                        '#07a2a4', '#9a7fd1', '#588dd5', '#f5994e', '#c05050',
                        '#59678c', '#c9ab00', '#7eb00a', '#6f5553', '#c14089'
                    ],

                    // Global text styles
                    textStyle: {
                        fontFamily: 'Roboto, Arial, Verdana, sans-serif',
                        fontSize: 13
                    },

                    // Add title
                    title: {
                        text: 'TOP Customers',
                        subtext: 'Typical customers',
                        left: 'center',
                        textStyle: {
                            fontSize: 17,
                            fontWeight: 500
                        },
                        subtextStyle: {
                            fontSize: 12
                        }
                    },

                    // Add tooltip
                    tooltip: {
                        trigger: 'item',
                        backgroundColor: 'rgba(0,0,0,0.75)',
                        padding: [10, 15],
                        textStyle: {
                            fontSize: 13,
                            fontFamily: 'Roboto, sans-serif'
                        },
                        //formatter: "{a} <br/>{b}: {c} ({d}%)"
                        formatter: function (params) {
                            return params.seriesName + '<br/>' + params.name + ': ' + nf.format(params.data.value) + ' ('+ params.percent +'%)';
                        }
                    },

                    // Add legend
                    legend: {
                        orient: 'vertical',
                        top: 'center',
                        left: 0,
                        data: data.name,
                        itemHeight: 8,
                        itemWidth: 8
                    },

                    // Add series
                    series: [{
                        name: 'Customer',
                        type: 'pie',
                        radius: ['50%', '70%'],
                        center: ['50%', '57.5%'],
                        itemStyle: {
                            normal: {
                                borderWidth: 1,
                                borderColor: '#fff',
                                label: {
                                    show: false
                                },
                                labelLine: {
                                    show: false
                                }
                            }
                        },
                        data: data.value
                    }]
                });
            }

            // Resize function
            var triggerChartResize = function () {
                pie_donut_element && pie_donut.resize();
            };

            // On sidebar width change
            $(document).on('click', '.sidebar-control', function () {
                setTimeout(function () {
                    triggerChartResize();
                }, 0);
            });

            // On window resize
            var resizeCharts;
            window.onresize = function () {
                clearTimeout(resizeCharts);
                resizeCharts = setTimeout(function () {
                    triggerChartResize();
                }, 200);
            };
        };
        var PieProducts = function (data) {
            if (typeof echarts == 'undefined') {
                console.warn('Warning - echarts is not loaded.');
                return;
            }
            // Define elements
            var pie_basic_element = document.getElementById('pie_product');

            // Charts configuration

            // Basic pie chart
            if (pie_basic_element) {

                // Initialize chart
                var pie_basic = echarts.init(pie_basic_element);

                // Chart config
                // Options
                pie_basic.setOption({
                    // Colors
                    color: [
                        '#2ec7c9', '#b6a2de', '#5ab1ef', '#ffb980', '#d87a80',
                        '#8d98b3', '#e5cf0d', '#97b552', '#95706d', '#dc69aa',
                        '#07a2a4', '#9a7fd1', '#588dd5', '#f5994e', '#c05050',
                        '#59678c', '#c9ab00', '#7eb00a', '#6f5553', '#c14089'
                    ],

                    // Global text styles
                    textStyle: {
                        fontFamily: 'Roboto, Arial, Verdana, sans-serif',
                        fontSize: 13
                    },

                    // Add title
                    title: {
                        text: 'Best-selling',
                        subtext: 'Goods that sell well',
                        left: 'center',
                        textStyle: {
                            fontSize: 17,
                            fontWeight: 500
                        },
                        subtextStyle: {
                            fontSize: 12
                        }
                    },

                    // Add tooltip
                    tooltip: {
