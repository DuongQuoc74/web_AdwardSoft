
@model AdwardSoft.Web.Inside.Models.UserInsertAndInfoViewModel

<div class="card">
    <div class="card-header header-elements-inline">
        <h5 class="card-title">Thông tin cá nhân</h5>
        <div class="header-elements">
            <div class="list-icons">
                <a class="list-icons-item" data-action="collapse"></a>
                <a class="list-icons-item" data-action="reload"></a>
                <a class="list-icons-item" data-action="remove"></a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <form class="form-validate-jquery form-content" asp-action="Update" asp-controller="Home" method="post">
            <input asp-for="@Model.UserInfo.Id" type="hidden" value="@Model.UserInfo.Id">
            <input type="hidden" asp-for="@Model.UserInfo.PasswordHash" value="@Model.UserInfo.PasswordHash">
            <input type="hidden" asp-for="@Model.UserInfo.SecurityStamp" value="@Model.UserInfo.SecurityStamp">
            <input type="hidden" asp-for="@Model.UserInfo.Type" value="@Model.UserInfo.Type">
            <input type="hidden" asp-for="@Model.UserInfo.Avatar" value="@Model.UserInfo.Avatar" />
            <input id="iden" type="hidden" asp-for="@Model.UserInfo.IdentityNumber" value="@Model.UserInfo.IdentityNumber">
            <input type="hidden" asp-for="@Model.UserInfo.FileImage" value="@Model.UserInfo.FileImage" />
            <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        <label>UserName</label>
                        <div class="form-group-feedback form-group-feedback-left">
                            <input type="text" asp-for="@Model.UserInfo.UserName" value="@Model.UserInfo.UserName" class="form-control">
                            <span asp-validation-for="@Model.UserInfo.UserName" class="validation-invalid-label"></span>
                            <div class="form-control-feedback">
                                <i class="icon-user"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label>FullName</label>
                        <div class="form-group-feedback form-group-feedback-left">
                            <input type="text" asp-for="@Model.UserInfo.FullName" value="@Model.UserInfo.FullName" class="form-control">
                            <span asp-validation-for="@Model.UserInfo.FullName" class="validation-invalid-label"></span>
                            <div class="form-control-feedback">
                                <i class="icon-user"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        <label>Số điện thoại</label>
                        <div class="form-group-feedback form-group-feedback-left">
                            <input type="text" asp-for="@Model.UserInfo.PhoneNumber" value="@Model.UserInfo.PhoneNumber" class="form-control" onkeypress="return event.charCode >= 48 && event.charCode <= 57">
                            <span asp-validation-for="@Model.UserInfo.PhoneNumber" class="validation-invalid-label"></span>
                            <div class="form-control-feedback">
                                <i class="icon-phone2"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label>Email</label>
                        <div class="form-group-feedback form-group-feedback-left">
                            <input type="text" asp-for="@Model.UserInfo.Email" value="@Model.UserInfo.Email" class="form-control">
                            <span asp-validation-for="@Model.UserInfo.Email" class="validation-invalid-label"></span>
                            <div class="form-control-feedback">
                                <i class="icon-mail5"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-right">
                <button id="submit" type="submit" style="background-color:#768085" class="btn btn-primary">Save changes</button>

            </div>

        </form>
    </div>

</div>

