@model ScoreConfigurationViewModel

@{
    var actionMethod = Model.Id == 0 ? "Post" : "Put";
}
<form class="form-validate-jquery form-content" asp-action="@ViewBag.Action" asp-controller="ScoreConfiguration" callbackfn="ScoreConfigurationSuccess()" method="post" id="form-create">
    <div class="modal-header">
        @if (ViewBag.Action == "Create")
        {<h5 class="modal-title">Create</h5> }
        else
        {
            <h5 class="modal-title">Update</h5>
        }
    </div>
    <div class="modal-body row">
        <input asp-for="@Model.Id" type="hidden" value="@Model.Id">
            <div class="col-md-12">
                <label asp-for="@Model.EffectiveDate" class="clear-fix font-weight-semibold"></label>
                <div class="form-group-feedback form-group-feedback-left">
                    <input asp-for="@Model.DateStr" value="@Model.DateStr" type="text" class="form-control daterange">
                    <span asp-validation-for="@Model.DateStr" class="validation-invalid-label"></span>
                    <div class="form-control-feedback">
                        <i class="icon-calendar22"></i>
                    </div>
                </div>
            </div>
        
       
        <div class="form-group col-md-12">
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="@Model.FromAmount" class="clear-fix font-weight-semibold"></label>
                    <input asp-for="@Model.FromAmount" value="@Model.FromAmount" type="text" class="form-control" onkeypress="return event.charCode >= 48 && event.charCode <= 57">
                    <span asp-validation-for="@Model.FromAmount" class="validation-invalid-label"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="@Model.ToAmount" class="clear-fix font-weight-semibold"></label>
                    <input asp-for="@Model.ToAmount" value="@Model.ToAmount" type="text" class="form-control" onkeypress="return event.charCode >= 48 && event.charCode <= 57">
                    <span asp-validation-for="@Model.ToAmount" class="validation-invalid-label"></span>
                </div>
            </div>
        </div>
        <div class="form-group col-md-12">
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="@Model.FromPoint" class="clear-fix font-weight-semibold"></label>
                    <input asp-for="@Model.FromPoint" value="@Model.FromPoint" type="text" class="form-control" onkeypress="return event.charCode >= 48 && event.charCode <= 57">
                    <span asp-validation-for="@Model.FromPoint" class="validation-invalid-label"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="@Model.ToPoint" class="clear-fix font-weight-semibold"></label>
                    <input asp-for="@Model.ToPoint" value="@Model.ToPoint" type="text" class="form-control" onkeypress="return event.charCode >= 48 && event.charCode <= 57">
                    <span asp-validation-for="@Model.ToPoint" class="validation-invalid-label"></span>
                </div>
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <a href="#" onclick="ReadById(0)" class="btn btn-light ml-1 btn-sm">Cancel <i class="fas fa-times mr-1"></i></a>
        @if (ViewBag.Action == "Create")
        {
            <button type="submit" style="margin-right:0" class="btn btn-success ml-1 btn-sm">Create<i class="fa fa-check ml-1"></i></button>
        }
        else
        {
            <button type="submit" style="margin-right:0" class="btn btn-success ml-1 btn-sm">Update<i class="fa fa-check ml-1"></i></button>
        }
    </div>
</form>
<script>
    $(document).ready(function () {

        $('.daterange').daterangepicker({
            applyClass: 'bg-slate-600',
            cancelClass: 'btn-light',
            singleDatePicker: true,
            timePicker: false,
            autoclose: true,
            minDate: new Date(),
            opens: 'right',
            locale: {
                format: 'DD/MM/YYYY'
            },
            // dateFormat:'DD/MM/YYYY',
           // startDate: new Date()

        });
        setTimeout(rebindValidation, 500);
        $('.select').select2({
            minimumResultsForSearch: Infinity
        });
        $('.form-check-input-switch').bootstrapSwitch();
        $('.select-search').select2();

    });

</script>
