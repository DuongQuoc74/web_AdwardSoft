@model ShiftViewModel

@{
    var isNew = Model.Id == default(int);
    var methodAction = isNew ? "Post" : "Put";
    var action = isNew ? "Create" : "Update";
}

<form asp-controller="Shift" asp-action="@action" class="form-validate-jquery form-content" id="_FormView" callbackfn="ShiftSuccess()" method="@methodAction">
    <div class="modal-header">
        @if (isNew)
        {
            <h5 class="modal-title">@EText.Create.Description() </h5>
        }
        else
        {
            <h5 class="modal-title">@EText.Update.Description() </h5>
            <input type="text" hidden value="@Model.Id" asp-for="@Model.Id" />
        }
    </div>
    <div class="modal-body row">
        <div class="form-group col-md-12">
            <label asp-for="Name" class="clear-fix font-weight-semibold"></label>
            <input type="text" asp-for="@Model.Name" value="@Model.Name" class="form-control" />
            <span asp-validation-for="@Model.Name" class="validation-invalid-label"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="StartTime" class="clear-fix font-weight-semibold"></label>
            <input type="text" asp-for="@Model.StartTime" value="@Model.StartTime" class="form-control" />
            <span asp-validation-for="@Model.StartTime" class="validation-invalid-label"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="EndTime" class="clear-fix font-weight-semibold"></label>
            <input type="text" asp-for="@Model.EndTime" value="@Model.EndTime" class="form-control" />
            <span asp-validation-for="@Model.EndTime" class="validation-invalid-label"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="@Model.IsMonday" class="clear-fix font-weight-semibold"></label>
            <div class="form-check form-check-switch form-check-switch-left">
                <input asp-for="@Model.IsMonday" type="checkbox" data-off-color="danger" data-on-text="True" data-off-text="False" class="form-check-input-switchery-customer form-control">
            </div>
        </div>
        <div class="col-md-4">
            <label asp-for="@Model.IsTuesday" class="clear-fix font-weight-semibold"></label>
            <div class="form-check form-check-switch form-check-switch-left">
                <input asp-for="@Model.IsTuesday" type="checkbox" data-off-color="danger" data-on-text="True" data-off-text="False" class="form-check-input-switchery-customer form-control">
            </div>
        </div>
        <div class="col-md-4">
            <label asp-for="@Model.IsWednesday" class="clear-fix font-weight-semibold"></label>
            <div class="form-check form-check-switch form-check-switch-left">
                <input asp-for="@Model.IsWednesday" type="checkbox" data-off-color="danger" data-on-text="True" data-off-text="False" class="form-check-input-switchery-customer form-control">
            </div>
        </div>
        <div class="col-md-4">
            <label asp-for="@Model.IsThursday" class="clear-fix font-weight-semibold"></label>
            <div class="form-check form-check-switch form-check-switch-left">
                <input asp-for="@Model.IsThursday" type="checkbox" data-off-color="danger" data-on-text="True" data-off-text="False" class="form-check-input-switchery-customer form-control">
            </div>
        </div>
        <div class="col-md-4">
            <label asp-for="@Model.IsFriday" class="clear-fix font-weight-semibold"></label>
            <div class="form-check form-check-switch form-check-switch-left">
                <input asp-for="@Model.IsFriday" type="checkbox" data-off-color="danger" data-on-text="True" data-off-text="False" class="form-check-input-switchery-customer form-control">
            </div>
        </div>
        <div class="col-md-4">
            <label asp-for="@Model.IsSaturday" class="clear-fix font-weight-semibold"></label>
            <div class="form-check form-check-switch form-check-switch-left">
                <input asp-for="@Model.IsSaturday" type="checkbox" data-off-color="danger" data-on-text="True" data-off-text="False" class="form-check-input-switchery-customer form-control">
            </div>
        </div>
        <div class="col-md-4">
            <label asp-for="@Model.IsSunday" class="clear-fix font-weight-semibold"></label>
            <div class="form-check form-check-switch form-check-switch-left">
                <input asp-for="@Model.IsSunday" type="checkbox" data-off-color="danger" data-on-text="True" data-off-text="False" class="form-check-input-switchery-customer form-control">
            </div>
        </div>
    </div>
    <div class="modal-footer row">
        <div class="col-md-12">
            <div class="d-flex justify-content-end align-items-center clear-fix">
                <a href="#" onclick="ReadById(0)" class="btn btn-light ml-1 btn-sm">@EText.Cancel.Description() <i class="fas fa-times mr-1"></i></a>
                @if (isNew)
                {
                    <button type="submit" class="btn btn-success ml-1 btn-sm mr-0">@EText.Create.Description() <i class="fa fa-check ml-1"></i></button>
                }
                else
                {
                    <button type="submit" class="btn btn-success ml-1 btn-sm mr-0">@EText.Update.Description() <i class="fa fa-check ml-1"></i></button>
                }
            </div>
        </div>
    </div>
</form>

<script>
    $(document).ready(function () {
        $('.select').select2({
            minimumResultsForSearch: Infinity
        });
        $('.select-search').select2();
        setTimeout(rebindValidation, 500);
    });
</script>
<script>
    $(document).ready(function () {
        setTimeout(rebindValidation, 500);

        var elems = Array.prototype.slice.call(document.querySelectorAll('.form-check-input-switchery-customer'));

        elems.forEach(function (html) {
            var switchery = new Switchery(html);
            if ($("#isActiveProduct").val() == 1) {
                switchery.disable();
            }
        });
    });
</script>